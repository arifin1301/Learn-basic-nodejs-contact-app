<div class="container mt-5">
    <div class="row">
        <div class="col-2"></div>
        <div class="col-8">
            <h2 class="mb-3 text-primary">Daftar Contact</h2>
            <a href="/contact/add" class="btn btn-primary mb-3">Tambah Kontak</a>
            <% if(msg.length !=0) { %>
                <div class="alert alert-success" role="alert">
                    <%= msg %>
                </div>
                <% } %>
                    <table class="table">
                        <thead>
                            <tr>
                                <th scope="col">#</th>
                                <th scope="col">Nama</th>
                                <th scope="col">No HP</th>
                                <th scope="col">Action</th>
                            </tr>
                        </thead>
                        <tbody>
                            <% if(contacts.length===0) { %>
                                <tr>
                                    <td colspan="4">
                                        <div class="alert alert-danger" role="alert">
                                            Data kontak belum tersedia atau kosong.
                                        </div>
                                    </td>
                                </tr>
                                <% } %>
                                    <% contacts.forEach((contact, i)=> { i++ %>
                                        <tr>
                                            <th scope="row">
                                                <%= i++ %>
                                            </th>
                                            <td>
                                                <%= contact.nama %>
                                            </td>
                                            <td>
                                                <%= contact.nohp %>
                                            </td>
                                            <td>
                                                <a href="/contact/<%= contact.nama %>" style="text-decoration: none;"
                                                    class="badge rounded-pill bg-success p-2"><i
                                                        class="bi bi-info-circle"></i>
                                                    detail</a>
                                                <form action="/contact?_method=DELETE" method="POST" class="d-inline">
                                                    <input type="hidden" name="nama" value="<%= contact.nama %>">
                                                    <button type="submit" class="badge bg-danger rounded-pill p-2">
                                                        Hapus
                                                    </button>
                                                </form>
                                                <a href="/contact/edit/<%= contact.nama%>"
                                                    style="text-decoration: none;"
                                                    class="badge rounded-pill bg-info p-2"><i class="bi bi-trash3"></i>
                                                    Ubah</a>
                                            </td>
                                        </tr>

                                        <% }) %>
                        </tbody>
                    </table>
        </div>
    </div>
</div>